<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time %>
  </div>

  <div class="field">
    <%= form.label :kind_of_climbing %>
    <%= form.select :kind_of_climbing, Post.kind_of_climbings.keys, {prompt: "Select"}, class: "select-box" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :describe %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
