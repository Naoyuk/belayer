<h1>Message Box</h1>
<div class="answers">
  <% @posts.each do |post| %>
    <% if Answer.exists?(post_id: post.id) %>
      <div class="original-post">
        <h2>
          <%= "#{post.date.to_s(:date_for_title)} #{post.start_time.to_s(:time_for_title)} - #{post.end_time.to_s(:time_for_title)}" %>
        </h2>
      </div>

      <% post.answers.order(created_at: :desc).each do |answer| %>

        <% if answer.user_id != current_user.id %>
          <div class="answer">
            <% if !answer.read %>
              <span style="font-size: 24px; color: tomato;"><i class="far fa-envelope"></i></span>
            <% else %>
              <span style="font-size: 24px; color: Dodgerblue;"><i class="far fa-envelope-open"></i></i></span>
            <% end %>
              <span class="answerer"><%= link_to "#{answer.user.name} ( #{answer.created_at.strftime("%A, %b %d %-H:%M %p")} )", answer_path(answer) %></span>
          </div>
        <% end %>

      <% end %>
    <% end %>
  <% end %>
</div>
